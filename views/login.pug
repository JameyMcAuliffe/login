doctype html
html
	head
		title= title
	body
		h1 Login
		if msg
			h2= msg
		.login-form
			form(method='POST')
				.form-group
					label(for='email') Email Address
					input.form-control#email(
						type='email'
						name='email'
						placeholder='you@example.com'
						required
					)
				.form-group
					label(for='password') Password
					input.form-control#password(
						type='password'
						name='password'
						placeholder='***************'
						required
					)
				.contact-form__submit
					a(href='/') Cancel
					input.btn(type='submit' value='Login')

